<div class="row">
    <div class="col-sm-12 col-md-12 user-details">
        <div class="user-image">
            <img src="{{picture}}" alt="{{name}}" title="{{name}}" class="img-circle">
        </div>
        <div class="user-info-block">
            <div class="user-heading">
                <h3>{{name}}</h3>
                <span class="help-block">{{profession}}</span>
                <div class="help-block">Trainings left: {{trainings}}</div>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".add-training-day-modal">Add Training day</button>
                
            </div>
        </div>
        <div>
        </div>
    </div>
{{#each workouts}}

    <div class="container">
	<section class="blue-section">
		<h1>{{date}}</h1>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".add-exercise-modal{{this.id}}">Add Exercise</button>
        
	</section>

	<ul class="plans">
        {{#each this.exercises}}
		<li class="plan highlight">
			<span class="price price-green">{{exercise}}</span>
			
			<div class="details">
				<h1 class="plan-title">{{exercise}}</h1>
				<p class="plan-description">Series: {{series}} Reps: {{reps}} at {{at}}kg.</p>
			</div>
			
		</li>
        {{/each}}
	</ul>
</div>
<div id="modal" class="modal fade add-exercise-modal{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Exercise</h4>
            </div>
            <div class="modal-body">

                <form>
                    <div class="form-group">
                        <label for="exercise">Exercise:</label>
                        <select id="exercise" class="form-control">
                            <option>Bench Press</option>
                            <option>Pull Ups</option>
                            <option>Push Ups</option>
                            <option>Deadlifts</option>
                            <option>Swing</option>
                        </select>
                    </div>
                    <form class="form-group">
                        <label for="series">Series: </label>
                        <label class="radio-inline">
                        <input type="radio" name="inlineRadioOptions" id="inlineRadio1" value="1"> 1
                        </label>
                        <label class="radio-inline">
                        <input type="radio" name="inlineRadioOptions" id="inlineRadio2" value="2"> 2
                        </label>
                        <label class="radio-inline">
                        <input type="radio" name="inlineRadioOptions" id="inlineRadio3" value="3"> 3
                        </label>
                        <label class="radio-inline">
                        <input type="radio" name="inlineRadioOptions" id="inlineRadio4" value="4"> 4
                        </label>
                        <label class="radio-inline">
                        <input type="radio" name="inlineRadioOptions" id="inlineRadio5" value="5"> 5
                        </label>
                        <label class="radio-inline">
                        <input type="radio" name="inlineRadioOptions" id="inlineRadio6" value="6"> 6
                        </label>
                    </form>
                    <div class="form-group">
                        <label for="reps">Reps</label>
                        <input type="number" class="form-control" id="reps" placeholder="Reps">
                    </div>
                    <div class="form-group">
                        <div class="input-group">

                            <div class="input-group-addon">@</div>
                            <input type="text" class="form-control" id="kg" placeholder="Kg">
                            <div class="input-group-addon">Kg</div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="close" data-dismiss="modal">Close</button>
                <a href="#/addexercise/:{{../id}}/:{{this.id}}"><button type="button" class="btn btn-primary">Add</button></a>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

{{/each}}
</div>


<div class="modal fade add-training-day-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Training Day</h4>
            </div>
            <div class="modal-body">

                <form>
                     <div class="form-group">
                        <label for="date">Date</label>
                        <input type="date" class="form-control" id="date" placeholder="Date">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <a href="#/addtrainingday/:{{id}}"><button type="button" class="btn btn-primary">Add</button></a>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->